<!DOCTYPE html>
  
<html lang="en">
<body>
  <% include partials/_header %>
  <div class="container">
    <div class="jumbotron" align="center">
      <span class="smartnote"> <img src="data:image/png;base64,"> 
        Smart Note</span>
        <h3 id="introText">Enter one of the four keywords(watch, eat, buy or read) followed by your Todo.</h3>
        <form class="submitTodo"method="POST" action="/smart">
          <input class="search" name="search" autofocus>
          <br>
          <a href="#" class = "btn btn-default btn-lg" id="sort" role="button">Sort for me, machine!</a>
        </form>
      </div>
    </div>
    <div class="container">
      <div class="well">
        <h4>Review your sorted list here( we made a suggestion based on relevance for you).</h4>
      </div>
      <br>
      <div class="jumbotron" align="center" id="picture-categories">
        <div class="container-fluid">
          <div class="row">
            <div class="col-sm-3" id="watch">
              <img class="toggleWatch" src="../Images/Watch.jpeg" class="img-rounded" style="height:10em; width: 10em">
              <div class="watchDisplay"><p id="to-watch">To Watch</p>
                <% for(result of dbArray.slice(1)){ %>
                  <%if(result.todo_name.split(" ")[0] === "watch"){%>
                    <li class="watchResults">
                      <b><%= result.todo_name %></b>
                      <br>
                      <%=result.todo_reference%>
                    </li>
                    <%}}%>
                  </div>
                  <div class="displayWatch" style="display:none">
                    <br>
                    <div class="displayContainer">
                    </div>
                  </div>
                </div>
                <div class="col-sm-3">
                  <img class="toggleEat" src="../Images/food.jpeg" class="img-rounded" style="height:10em; width: 10em">
                  <div class="foodDisplay"><p id="to-eat">To Eat</p></div>
                  <% for(result of dbArray.slice(1)){ %>
                    <%if(result.todo_name.split(" ")[0] === "eat"){%>
                      <%=JSON.stringify(result)%>
                      <li class="foodResults">
                      <a href= <%=result%>
                       
                        <b><%= result.todo_name %></b>
                        <br>
                        <%=result.todo_reference%></a>
                      </li>
                      <%}}%>
                      <div class="displayEat" style="display:none">
                        <br>
                        <div class="displayContainer">
                        </div>
                      </div>
                    </div>
                    <div class="col-sm-3">
                      <img class="toggleMerch" src="../Images/Products.jpeg" class="img-rounded" style="height:10em; width: 10em">
                      <div class="merchDisplay"><p id="to-buy">To Buy</p>
                        <% for(result of dbArray.slice(1)){ %>
                          <%if(result.todo_name.split(" ")[0] === "buy"){%>
                            <li class="merchResults">
                              <b><%= result.todo_name %></b>
                              <br>
                              <%=result.todo_reference%>
                            </li>
                            <%}}%></div>
                          </div>
                          <div class="col-sm-3">
                            <img class="toggleRead" src="../Images/books.jpeg" class="img-rounded" >
                            <div class="bookDisplay">
                              <p id="to-read">To Read</p>
                              <% for(result of dbArray.slice(1)){ %>
                                <%if(result.todo_name.split(" ")[0] === "read"){%>
                                  <li class="bookResults" ><a href="google.com">
                                    <b><%= result.todo_name %></b>
                                    <br>
                                    <%=result.todo_reference%></a>
                                  </li>
                                  <%}}%>
                                </div>
                              </div>
                            </div>
                          </div>
                        </body>
                        </html>
                        
                        
                        
                        